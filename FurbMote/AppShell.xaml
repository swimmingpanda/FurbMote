<Page
  x:Class="FurbMote.AppShell"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:FurbMote"
  xmlns:controls="using:FurbMote.Controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <Grid x:Name="rGrid" Background="#00ABA9">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Grid x:Name="hGrid" Background="Transparent"/>

    <Grid x:Name="nGrid" Grid.Row="1" Background="Transparent"/>

    <StackPanel x:Name="pGrid" Grid.Row="1" VerticalAlignment="Center">
      <ProgressRing x:Name="pRing" HorizontalAlignment="Center" Background="Transparent" Foreground="White" IsActive="False"/>
      <TextBlock x:Name="pText" Style="{ThemeResource BaseTextBlockStyle}" HorizontalAlignment="Center" TextWrapping="Wrap" Padding="24,6"/>
    </StackPanel>
  </Grid>
</Page>
