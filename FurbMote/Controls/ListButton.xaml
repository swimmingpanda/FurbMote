<UserControl
    x:Class="FurbMote.Controls.ListButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FurbMote.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

  <Grid x:Name="grid" PointerEntered="grid_PointerEntered" PointerExited="grid_PointerExited" Margin="6,3,6,3">
    <TextBlock x:Name="text" FontSize="22" FontWeight="Light" Foreground="White" Text="{Binding DisplayName}" VerticalAlignment="Center" Padding="240,6,240,6" HorizontalAlignment="Center" FontFamily="ms-appx:/Assets/OpenSans-Regular.ttf#Open Sans"/>
  </Grid>
</UserControl>
